FROM oven/bun:1-alpine

WORKDIR /app

# Copy package files
COPY package.json bun.lock* ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run Vite dev server with --host to bind to 0.0.0.0
CMD ["bun", "run", "dev", "--", "--host", "0.0.0.0"]
